<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h2 style="text-align: center;"> Add a comment to <strong><%= hack.name %></strong> </h2>

		<div style="width: 30%; margin: 25px auto;">
			<form action="/hacks/<%= hack._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
			<a href="/hacks">Go Back</a>
		</div>

	</div>
</div>

<%- include("../partials/footer") %>