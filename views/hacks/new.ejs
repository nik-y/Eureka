<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h2 style="text-align: center;">Create New Hack</h2>

		<div style="width: 30%; margin: 25px auto;">
			<form action="/hacks" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name">
				</div>
				
				<div class="form-group">
				  <select class="form-control" aria-label="Default select example" name="topic">
					  <option selected disabled>Select a topic</option>
					  <option value="College">College</option>
					  <option value="Programming">Programming</option>
					  <option value="Sports">Sports</option>
					  <option value="Health">Health</option>
					  <option value="Food">Food</option>
					  <option value="Other">Other</option>
					</select>
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image url">
				</div>
				
				<div class="form-group">
					<textarea class="form-control" name="discription" rows="5" placeholder="description"></textarea>
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				
			</form>
			<a href="/hacks">Go Back</a>
		</div>

	</div>
</div>

<%- include("../partials/footer") %>